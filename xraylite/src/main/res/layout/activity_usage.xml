<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMainBackground"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayoutTitleBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="@dimen/lo_16dpGrid">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center"
                        android:background="@drawable/logo_effected"
                        android:contentDescription="@string/todo" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="@dimen/lo_16dpGrid">

                    <TextView
                        android:id="@+id/tv_usage_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/app_name"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/ll_about_forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="@dimen/lo_16dpGrid">

                    <ImageView
                        android:id="@+id/iv_go_forward"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="bottom"
                        android:layout_marginEnd="@dimen/lo_4dpGrid"
                        android:background="@drawable/ic_go_forward"
                        android:backgroundTint="@color/colorAccent"
                        android:contentDescription="@string/todo" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_usage_data_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/lo_16dpGrid"
                    android:layout_marginEnd="@dimen/lo_16dpGrid"
                    android:layout_marginBottom="@dimen/lo_16dpGrid"
                    android:text="@string/tv_usage_data_title"
                    android:textSize="@dimen/ts_Body1"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/lo_16dpGrid"
                        android:paddingEnd="@dimen/lo_16dpGrid">

                        <!-- امروز -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/lo_8dpGrid"
                            android:layout_weight="1"
                            android:background="@drawable/stat_box_rectangle"
                            android:minWidth="240dp"
                            android:orientation="vertical"
                            android:padding="@dimen/lo_16dpGrid">

                            <TextView
                                android:id="@+id/tv_usage_data_today_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/default_text_today"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body1"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tv_usage_data_today_size"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/NA"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_H5" />

                            <TextView
                                android:id="@+id/tv_usage_data_today_used"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="@string/tv_usage_data_today_used"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body2"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="64dp"
                            android:layout_margin="@dimen/lo_8dpGrid" />

                        <!-- yesterday -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/lo_8dpGrid"
                            android:layout_weight="1"
                            android:background="@drawable/stat_grey_rectangle"
                            android:minWidth="180dp"
                            android:orientation="vertical"
                            android:padding="@dimen/lo_16dpGrid">

                            <TextView
                                android:id="@+id/tv_usage_data_yesterday_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_usage_connection_yesterday_title"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body1"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tv_usage_data_yesterday_size"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/NA"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_H5" />

                            <TextView
                                android:id="@+id/tv_usage_data_yesterday_used"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="@string/tv_usage_data_thismonth_used"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body2"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="64dp"
                            android:layout_margin="@dimen/lo_8dpGrid" />

                        <!-- 3 day -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/lo_8dpGrid"
                            android:layout_weight="1"
                            android:background="@drawable/stat_grey_rectangle"
                            android:minWidth="180dp"
                            android:orientation="vertical"
                            android:padding="@dimen/lo_16dpGrid">

                            <TextView
                                android:id="@+id/tv_usage_data_daythree_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_usage_data_daythree_title"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body1"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tv_usage_data_daythree_size"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/NA"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_H5" />

                            <TextView
                                android:id="@+id/tv_usage_data_daythree_used"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="@string/tv_usage_data_thismonth_used"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body2"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="64dp"
                            android:layout_margin="@dimen/lo_8dpGrid" />

                        <!-- this week -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/lo_8dpGrid"
                            android:layout_weight="1"
                            android:background="@drawable/stat_grey_rectangle"
                            android:minWidth="180dp"
                            android:orientation="vertical"
                            android:padding="@dimen/lo_16dpGrid">

                            <TextView
                                android:id="@+id/tv_usage_data_thisweek_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_usage_data_thisweek_title"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body1"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tv_usage_data_thisweek_size"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/NA"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_H5" />

                            <TextView
                                android:id="@+id/tv_usage_data_thisweek_used"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="@string/tv_usage_data_thismonth_used"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body2"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="64dp"
                            android:layout_margin="@dimen/lo_8dpGrid" />

                        <!-- this month -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/lo_8dpGrid"
                            android:layout_weight="1"
                            android:background="@drawable/stat_grey_rectangle"
                            android:minWidth="180dp"
                            android:orientation="vertical"
                            android:padding="@dimen/lo_16dpGrid">

                            <TextView
                                android:id="@+id/tv_usage_data_thismonth_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_usage_data_thismonth_title"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body1"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tv_usage_data_thismonth_size"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/NA"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_H5" />

                            <TextView
                                android:id="@+id/tv_usage_data_thismonth_used"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="@string/tv_usage_data_thismonth_used"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body2"
                                android:textStyle="bold" />
                        </LinearLayout>


                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutStats"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingTop="@dimen/lo_8dpGrid"
                android:paddingBottom="@dimen/lo_16dpGrid">

                <TextView
                    android:id="@+id/tv_usage_time_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/lo_16dpGrid"
                    android:layout_marginEnd="@dimen/lo_16dpGrid"
                    android:layout_marginBottom="@dimen/lo_8dpGrid"
                    android:text="@string/tv_usage_time_title"
                    android:textSize="@dimen/ts_Body1"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/lo_16dpGrid"
                        android:paddingEnd="@dimen/lo_16dpGrid">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/lo_8dpGrid"
                            android:layout_marginBottom="@dimen/lo_8dpGrid"
                            android:layout_weight="1"
                            android:background="@drawable/stat_box_rectangle"
                            android:minWidth="240dp"
                            android:orientation="vertical"
                            android:padding="@dimen/lo_16dpGrid">

                            <TextView
                                android:id="@+id/tv_usage_time_today_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/default_text_today"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body1"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tv_usage_time_today_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/NA"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_H5" />

                            <TextView
                                android:id="@+id/tv_usage_time_today_metric"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/tv_usage_time_today_metric"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body1" />

                            <TextView
                                android:id="@+id/tv_usage_time_today_used"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="@string/tv_usage_time_today_used"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body2"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="64dp"
                            android:layout_margin="@dimen/lo_8dpGrid" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/lo_8dpGrid"
                            android:layout_marginBottom="@dimen/lo_8dpGrid"
                            android:layout_weight="1"
                            android:background="@drawable/stat_grey_rectangle"
                            android:minWidth="240dp"
                            android:orientation="vertical"
                            android:padding="@dimen/lo_16dpGrid">

                            <TextView
                                android:id="@+id/tv_usage_time_yesterday_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_usage_connection_yesterday_title"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body1"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tv_usage_time_yesterday_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/tv_usage_time_today_metric"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_H5" />

                            <TextView
                                android:id="@+id/tv_usage_time_yesterday_metric"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/tv_usage_time_today_metric"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body1" />

                            <TextView
                                android:id="@+id/tv_usage_time_yesterday_used"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="@string/tv_usage_time_today_used"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body2"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="64dp"
                            android:layout_margin="@dimen/lo_8dpGrid" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/lo_8dpGrid"
                            android:layout_marginBottom="@dimen/lo_8dpGrid"
                            android:layout_weight="1"
                            android:background="@drawable/stat_grey_rectangle"
                            android:minWidth="240dp"
                            android:orientation="vertical"
                            android:padding="@dimen/lo_16dpGrid">

                            <TextView
                                android:id="@+id/tv_usage_time_total_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_usage_connection_total_title"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body1"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tv_usage_time_total_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/NA"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_H5" />

                            <TextView
                                android:id="@+id/tv_usage_time_total_metric"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/tv_usage_time_today_metric"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body1" />

                            <TextView
                                android:id="@+id/tv_usage_time_total_used"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="@string/tv_usage_time_today_used"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body2"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/tv_usage_connections_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/lo_16dpGrid"
                    android:layout_marginTop="@dimen/lo_8dpGrid"
                    android:layout_marginEnd="@dimen/lo_16dpGrid"
                    android:layout_marginBottom="@dimen/lo_8dpGrid"
                    android:text="@string/tv_usage_connections_title"
                    android:textSize="@dimen/ts_Body1"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/lo_16dpGrid"
                        android:paddingEnd="@dimen/lo_16dpGrid">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/lo_8dpGrid"
                            android:layout_marginBottom="@dimen/lo_8dpGrid"
                            android:layout_weight="1"
                            android:background="@drawable/stat_box_rectangle"
                            android:minWidth="180dp"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/lo_16dpGrid"
                            android:paddingTop="@dimen/lo_16dpGrid"
                            android:paddingEnd="@dimen/lo_16dpGrid"
                            android:paddingBottom="@dimen/lo_16dpGrid">

                            <TextView
                                android:id="@+id/tv_usage_connection_today_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/default_text_today"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body1"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tv_usage_connection_today_size"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingStart="@dimen/lo_24dpGrid"
                                android:paddingEnd="@dimen/lo_24dpGrid"
                                android:text="@string/NA"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_H5" />

                            <TextView
                                android:id="@+id/tv_usage_connection_today_used"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="@string/tv_usage_connection_yesterday_used"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body2"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="64dp"
                            android:layout_margin="@dimen/lo_8dpGrid" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/lo_8dpGrid"
                            android:layout_marginBottom="@dimen/lo_8dpGrid"
                            android:layout_weight="1"
                            android:background="@drawable/stat_grey_rectangle"
                            android:minWidth="180dp"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/lo_16dpGrid"
                            android:paddingTop="@dimen/lo_16dpGrid"
                            android:paddingEnd="@dimen/lo_24dpGrid"
                            android:paddingBottom="@dimen/lo_16dpGrid">

                            <TextView
                                android:id="@+id/tv_usage_connection_yesterday_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_usage_connection_yesterday_title"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body1"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tv_usage_connection_yesterday_size"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingStart="@dimen/lo_24dpGrid"
                                android:paddingEnd="@dimen/lo_24dpGrid"
                                android:text="@string/NA"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_H5" />

                            <TextView
                                android:id="@+id/tv_usage_connection_yesterday_used"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="@string/tv_usage_connection_yesterday_used"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body2"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="64dp"
                            android:layout_margin="@dimen/lo_8dpGrid" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/lo_8dpGrid"
                            android:layout_marginBottom="@dimen/lo_8dpGrid"
                            android:layout_weight="1"
                            android:background="@drawable/stat_grey_rectangle"
                            android:minWidth="180dp"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/lo_16dpGrid"
                            android:paddingTop="@dimen/lo_16dpGrid"
                            android:paddingEnd="@dimen/lo_24dpGrid"
                            android:paddingBottom="@dimen/lo_16dpGrid">

                            <TextView
                                android:id="@+id/tv_usage_connection_total_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/tv_usage_connection_total_title"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_Body1"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tv_usage_connection_total_size"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingStart="@dimen/lo_24dpGrid"
                                android:paddingEnd="@dimen/lo_24dpGrid"
                                android:text="@string/NA"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/ts_H5" />

                            <TextView
                                android:id="@+id/tv_usage_connection_total_used"
                                android:layout_width="match_parent"
